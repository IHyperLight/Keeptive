{
    "name": "keeptive",
    "version": "1.2.1",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    },
    "keywords": [],
    "author": "Hyper Light",
    "license": "ISC",
    "dependencies": {
        "iconv-lite": "^0.7.0"
    },
    "devDependencies": {
        "electron": "^39.1.0",
        "electron-builder": "^26.0.12"
    },
    "build": {
        "appId": "com.keeptive.app",
        "productName": "Keeptive",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "src/**/*",
            "!src/python/**/*",
            "!src/*.py"
        ],
        "extraFiles": [
            {
                "from": "src/python",
                "to": "src/python",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "src",
                "to": "src",
                "filter": [
                    "*.py"
                ]
            }
        ],
        "win": {
            "target": "portable",
            "compression": "normal",
            "icon": "src/assets/icon-active.ico"
        }
    }
}
